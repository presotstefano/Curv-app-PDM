<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"> <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/userAvatarImageView"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/ic_person"
    app:civ_circle_background_color="@color/borderColor"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Nome Utente"/>

        <TextView
            android:id="@+id/bioTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/subtleTextColor"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Breve bio dell'utente..."/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/followButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="90dp"
        tools:text="@string/user_discovery_follow"/>
</LinearLayout>