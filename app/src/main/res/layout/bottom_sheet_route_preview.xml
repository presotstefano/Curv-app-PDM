<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Maniglia per trascinare -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle_background"/>

    <TextView
        android:id="@+id/routeNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Route Name Placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <!-- Chip Distanza -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/chip_background_grey"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_linear_scale"
                app:tint="@color/subtleTextColor"/>
            <TextView
                android:id="@+id/distanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0.0 km"
                android:textSize="12sp"
                android:textColor="@color/subtleTextColor"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Chip DifficoltÃ  -->
        <LinearLayout
            android:id="@+id/difficultyChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:background="@drawable/chip_background_colored"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical">
            <!-- === AGGIUNGI L'ID QUI === -->
            <ImageView
                android:id="@+id/difficultyIconView"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_speed"
                app:tint="@color/white"/>
            <!-- === FINE MODIFICA === -->
            <TextView
                android:id="@+id/difficultyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Medium"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Chip Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:background="@drawable/chip_background_rating"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_star"
                app:tint="@color/ratingColor"/>
            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0.0 (0)"
                android:textSize="12sp"
                android:textColor="@color/ratingColor"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewDetailsButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="@string/home_view_details_button"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        android:textStyle="bold" />

</LinearLayout>
