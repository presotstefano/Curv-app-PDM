<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/route_detail_report_title"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/textColor"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/reportReasonRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/reason_dangerous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_dangerous" />
        <RadioButton
            android:id="@+id/reason_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_private" />
        <RadioButton
            android:id="@+id/reason_inappropriate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_inappropriate" />
        <RadioButton
            android:id="@+id/reason_spam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_spam" />
        <RadioButton
            android:id="@+id/reason_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_other" />
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/commentInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/route_detail_report_hint"
        android:visibility="gone"> <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textCapSentences"
        android:minLines="2"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitReportButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="@string/route_detail_report_submit_button"
        app:backgroundTint="@color/dangerColor"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>
</LinearLayout>